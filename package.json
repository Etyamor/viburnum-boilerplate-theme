{
  "name": "viburnum-boilerplate-theme",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "ENV=production npm-run-all --sequential clean:images scripts:build styles:build",
    "dev": "node loadenv.js",
    "sync": "browser-sync start -p $SITE_URL --files '**/*.php' 'build/**/*'",
    "scripts:build": "webpack",
    "scripts:watch": "webpack --watch",
    "styles:build": "postcss ./src/index.scss -o ./build/index.css",
    "styles:watch": "postcss ./src/index.scss -o ./build/index.css --watch",
    "clean:images": "rm -rf ./build/images"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.2.1",
    "browser-sync": "^3.0.3",
    "dotenv": "^16.4.5",
    "lucide": "^0.447.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-minify": "^1.1.0",
    "postcss-nested": "^6.2.0",
    "postcss-url": "^10.1.3",
    "tailwindcss": "^3.4.14",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  }
}
